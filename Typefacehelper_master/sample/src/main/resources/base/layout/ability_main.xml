<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:right_padding="$float:default_circle_indicator_radius"
    ohos:left_padding="$float:default_circle_indicator_radius"
    ohos:bottom_padding="1vp"
    ohos:top_padding="1vp"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:hello_world"
        ohos:text="$string:Hello"
        ohos:text_size="20vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:bottom_margin="4vp"
        />
    <DirectionalLayout
        ohos:id="$+id:samples"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:hello_world"
        ohos:bottom_margin="4vp"
        ohos:top_margin="4vp"
        ohos:orientation="vertical">
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="$string:hello_world"/>
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="$string:app_name"/>
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="$string:hello_world"/>
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="$string:app_name"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Text
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="$string:hello_world"/>
        <Text
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="$string:app_name"/>
        <Text
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="$string:hello_world"/>
        <Text
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="$string:app_name"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <ListContainer
        ohos:id="$+id:list_container"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:below="$id:samples"
        ohos:top_margin="4vp"
        />
</DependentLayout>